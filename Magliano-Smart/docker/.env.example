# =================================
# 1. N8N - Workflow Orchestrator
# =================================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=supersecret
N8N_HOST=n8n.local
N8N_PORT=5678
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=n8npass
QUEUE_MODE=redis
REDIS_HOST=redis
REDIS_PORT=6379

# =================================
# 2. Database - PostgreSQL + pgvector
# =================================
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8npass
POSTGRES_DB=n8n

# =================================
# 3. Cache e queue - Redis
# =================================
REDIS_PASSWORD=

# =================================
# 4. AI / TTS / STT
# =================================
OLLAMA_GPU=all
WYOMING_CACHE_PATH=/cache

# =================================
# 5. Storage - MinIO
# =================================
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio123
MINIO_DATA_PATH=/data

# =================================
# 6. File management - Filebrowser
# =================================
FILEBROWSER_PUID=1000
FILEBROWSER_PGID=1000
FILEBROWSER_DATA_PATH=/srv

# =================================
# 7. Home Automation - Home Assistant
# =================================
HOMEASSISTANT_PORT=8123
HOMEASSISTANT_CONFIG_PATH=/config
HOMEASSISTANT_DEVICE=/dev/ttyUSB0

# =================================
# 8. GIS - QGIS Server
# =================================
QGIS_PROJECTS_PATH=/projects

# =================================
# 9. Networking - ZeroTier & Cloudflare Tunnel
# =================================
ZEROTIER_NETWORK_ID=<inserisci_network_id>
CLOUDFLARE_TUNNEL_TOKEN=<inserisci_token_tunnel>

# =================================
# 10. Volumi locali
# =================================
N8N_DATA_PATH=./volumes/n8n
PG_DATA_PATH=./volumes/postgres
REDIS_DATA_PATH=./volumes/redis
WYOMING_CACHE_VOLUME=./volumes/wyoming_cache
MINIO_DATA_VOLUME=./volumes/minio
FILEBROWSER_DATA_VOLUME=./volumes/filebrowser
QGIS_PROJECTS_VOLUME=./volumes/qgis_projects
HOMEASSISTANT_DATA_VOLUME=./volumes/homeassistant
